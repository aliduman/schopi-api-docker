<?php
/**
 * Special health check endpoint for Cloud Run
 * This file should be placed in the public directory
 */

header('Content-Type: application/json');
http_response_code(200);
echo json_encode([
    'status' => 'healthy',
    'timestamp' => date('c'),
    'environment' => getenv('APP_ENV') ?: 'undefined',
    'version' => '1.0.0'
]);
